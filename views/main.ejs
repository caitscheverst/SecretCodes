<h2>This looks like <%= a_an %> <strong><%= name %></strong>
    <% if (longName != "") { %>
        <span>(<%= longName %>)</span>
    <% } %>
</h2>

<div id="explanation">
    <% parts.forEach(function(part){ %><span class="segment <%= part.cls %>"><%= part.words %></span><% }) %>
</div>
<canvas id="canvas" height="150" width="700"></canvas>
<div id="bits">
    <% parts.forEach(function(part){ %>
        <% if (part.cls != "background") { %>
            <div class="<%= part.cls %> thing">
                <div class="bold"><%= part.title %></div>
                <%- part.meaning %>
            </div>
        <% } %>
    <% }) %>
</div>
